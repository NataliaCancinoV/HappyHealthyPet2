<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/pink_splash">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:src="@drawable/splash"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_splash_hhp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_splash"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@id/iv_splash"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_splash_hhp">

        <ImageView
            android:id="@+id/iv_paw_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/paw"
            android:layout_weight="1"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/iv_paw_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/paw"
            android:layout_weight="1"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/iv_paw_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/paw"
            android:layout_weight="1"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</RelativeLayout>